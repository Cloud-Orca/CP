<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Milestone_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISBLANK(pse__Milestone__c),
NOT(ISNULL ( pse__Assignment__c ))
)</errorConditionFormula>
    <errorMessage>Milestone is required when Assignment is not blank.</errorMessage>
</ValidationRule>
